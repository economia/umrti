@import prefixes
@import colors
leftColumn = 200px
topRow     = 600px
body
    margin 0px
    line-height 1.3em
    font-family arial, sans-serif
    .reasonsList
        position absolute
        top 0px
        left 0px
        width leftColumn
        height topRow
        background red
        margin 0px
        padding 0px
        li
            background #eee
            list-style-type none
            font-size 0.9em
            padding 5px 12px 5px 12px
            position relative
            &:first-child
                display none
            &:nth-child(odd)
                background #ddd
            .line
                position absolute
                top 7px
                right 12px
                width 20px
                height 15px
                background white
                border-radius 2px
                div
                    position absolute
                    top 6px
                    left 3px
                    width 14px
                    height 3px

    .reasonsGraph
        position absolute
        top 0px
        left 0px
        padding-left leftColumn
        height topRow
        path
            stroke-width 1px
    .mainReasons:hover
        .reasonsList
            li
                color #888
                background #ddd
                .line
                    background transparent
                &.active
                &:hover
                    background white
                    color black
                    cursor pointer

        .reasonsGraph
            path
                opacity 0.2
            g.active path
            path:hover
                opacity 1
    .stackedOrNotSelector
        position absolute
        top 10px
        right 10px
    .buttonset
        borderRadius = 3px
        button
            border 1px solid #aaa
            border-left 0px none
            margin 0px
            padding 4px 8px
            background #ddd
            &:first-child
                border-left 1px solid #aaa
                border-top-left-radius borderRadius
                border-bottom-left-radius borderRadius
            &:last-child
                border-top-right-radius borderRadius
                border-bottom-right-radius borderRadius
            &:hover
                background #eee
            &:active
                background #fff
