@import prefixes
@import colors
leftColumn = 200px
topRow     = 600px
body
    margin 0px
    line-height 1.3em
    font-family arial, sans-serif
    .reasonsList
        position absolute
        top 0px
        left 0px
        width (leftColumn - 1px)
        height topRow
        margin 0px
        padding 0px
        border-right 1px dotted HNLink
        li
            background lighten(HNBlue, 95%)
            list-style-type none
            font-size 0.9em
            padding 4px 12px 4px 12px
            border-top 1px solid lighten(HNBlue, 95%)
            border-bottom 1px solid lighten(HNBlue, 95%)
            position relative
            &:first-child
                display none
            .line
                position absolute
                top 7px
                right 12px
                width 20px
                height 15px
                background white
                border-radius 2px
                div
                    position absolute
                    top 6px
                    left 3px
                    width 14px
                    height 3px

    .reasonsGraph
        position absolute
        top 0px
        left 0px
        padding-left leftColumn
        height topRow
        g.disabled
            pointer-events none
            path
                opacity 0
        .axis
            pointer-events none
            font-size 0.8em
            text
                fill white
            &.y
                line
                    stroke white
                    stroke-width 2px
                    stroke-dasharray 2, 20
                    opacity 0.4
            &.non-stacked
                text
                    fill black
                &.y
                    line
                        stroke black
                        opacity 0.3
        .datapoint
            stroke-width 2
            &:hover
                fill #fff
                cursor pointer


    .mainReasons:hover
        .reasonsList
            li
                color #ccc
                .line
                    background transparent
                &.active
                &:hover
                    background white
                    color black
                    cursor pointer
                    border-top-color HNBlue
                    border-bottom-color HNBlue

        .reasonsGraph.hoverOn
            g.linesGroup
                path
                    opacity 0.1
                .disabled path
                    opacity 0
                .active path.dataline
                .line:hover path
                    opacity 1
                .active path
                    stroke-width 2px
    .stackedOrNotSelector
        position absolute
        top 21px
        right 41px
    .maleFemaleBothSelector
        position absolute
        top 21px
        right 100px
    .buttonset
        borderRadius = 3px
        button
            border 1px solid #aaa
            border-left 0px none
            margin 0px
            padding 2px 6px
            background #ddd
            &:first-child
                border-left 1px solid #aaa
                border-top-left-radius borderRadius
                border-bottom-left-radius borderRadius
            &:last-child
                border-top-right-radius borderRadius
                border-bottom-right-radius borderRadius
            &:hover
                background #eee
            &:active
                background #fff
